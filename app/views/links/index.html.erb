<div class="container" >
  <h1>Links</h1> <%= link_to "New link", new_link_path, class:"btn btn-primary" %>
    <table class="table table-striped">
      <thead>
        <tr>
                 <th scope="col">Name</th>
                 <th scope="col">Category</th>
                 <th scope="col">Link</th>
                  <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <div id="links">
          <% @links.each do |link| %>
              <tr>
                  <%= render link %>
                  <td>
                    <%= link_to "Show", link %>
                    <%= link_to edit_link_path(link) do %>
                        <i class="fa-solid fa-pen-to-square"></i>
                    <% end %> 
                  </td>
              </tr>

          <% end %>
        </div>
        
      </tbody>
    </table>
</div>
        

