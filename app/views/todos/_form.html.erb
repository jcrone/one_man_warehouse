

<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, autocomplete: "name", class: "form-control" %>
  </div>
  </div>

   <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, autocomplete: "description", class: "form-control" %>
  </div>
  </div>

   <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
    <%= form.label :due_date, class: "form-label" %>
    <%= form.date_field :due_date, autocomplete: "due_date", class: "form-control" %>
  </div>
  </div>

   <div class="d-flex flex-row align-items-center mb-4">
    <div>
      <%= form.label "Status", class: "form-label"%>
      <%= form.select :todo_status, 
      options_for_select([
           ["New" , 'new_item'], 
           ["Waiting on Info", "waiting_on_info"], 
           ["completed", "completed"]], selected: form.object.todo_status),
           {}, {class: "form-control" } %>
    </div>
  </div>

  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
    <%= form.submit class: "btn btn-primary btn-lg mt-4" %>
  </div>
<% end %>