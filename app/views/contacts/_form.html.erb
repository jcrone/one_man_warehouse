  </div>
  </div>

   <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
    <%= form.label :company, class: "form-label" %>
    <%= form.text_field :company, autocomplete: "company", class: "form-control" %>
  </div>
  </div>

   <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, autocomplete: "address", class: "form-control" %>
  </div>
  </div>

   <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, autocomplete: "phone", class: "form-control" %>
  </div>
  </div>

   <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
    <%= form.label :notes, class: "form-label" %>
    <%= form.text_area :notes, autocomplete: "notes", class: "form-control" %>
  </div>
  </div>

