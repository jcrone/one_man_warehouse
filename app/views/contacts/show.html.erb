<div class="container">
    <h1>Contact</h1>
    <div class="shadow p-3 mb-5 bg-body rounded">
                <div class="mb-2">
          <strong>First name: </strong>
          <%= @contact.first_name %>
        </div>
                <div class="mb-2">
          <strong>Last name: </strong>
          <%= @contact.last_name %>
        </div>
                <div class="mb-2">
          <strong>Company: </strong>
          <%= @contact.company %>
        </div>
                <div class="mb-2">
          <strong>Address: </strong>
          <%= @contact.address %>
        </div>
                <div class="mb-2">
          <strong>Phone: </strong>
          <%= @contact.phone %>
        </div>
                <div class="mb-2">
          <strong>Notes: </strong>
          <%= @contact.notes %>
        </div>
                <div class="mb-2">
          <strong>Email: </strong>
          <%= @contact.email %>
        </div>
                <%= render @contact %>
    </div>

    
    <div>
      <%= link_to "Edit this contact", edit_contact_path(@contact) %> |
      <%= link_to "Back to contacts", contacts_path %>
    
      <%= button_to "Destroy this contact", @contact, method: :delete, class:"btn btn-danger", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }  %>
    </div>
</div>