<div id="<%= dom_id hour %>">
<td>
      <%= hour.employee.name %>
  </td>
<td>
      <%= hour.hours %>
  </td>
<td>
  <% if !hour.start_date.nil? & !hour.end_date.nil? %>
    <%= hour.start_date.strftime("%m/%d/%Y")%> - <%= hour.end_date.strftime("%m/%d/%Y") %>
  <% end %>
</td>    

<% if current_user.admin? %> 
  <td>
    <%= hour.hours * hour.employee.hourly_rate %>
  </td>
<% end %>

<td>
  <%if !hour.pay_date.nil? %>
      <%= hour.pay_date.strftime("%m/%d/%Y") %>
      <%end %> 
  </td>

<td>
      <%= hour.status %>
  </td>
</div>